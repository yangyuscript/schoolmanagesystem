page {
  background: #fff; }

.title {
  color: #1b65ce;
  text-align: center;
  padding: 45rpx;
  font-size: 50rpx; }

.item {
  text-align: center;
  margin-bottom: 35rpx; }

  .item label {
    display: inline-block;
    text-align: right;
    font-size: 36rpx;
    line-height: 1.4rem;
    vertical-align: top;
    padding: 5rpx 0;
    color: #333; }
    
  .item input {
    border: 4rpx solid #dddddd;
    display: inline-block;
    width: 95%;
    font-size: 30rpx;
    text-align: left;
    align-self: center;
    padding: 5rpx 10rpx;
    border-radius: 15rpx; }

.btn {
  margin-top: 80rpx; }
  .btn button {
    width: 600rpx;
    height: 80rpx;
    color: #1b65ce;
    font-size: 30rpx;
    border: 4rpx solid #1b65ce;
    border-radius: 35rpx;
    background-color: transparent; }
