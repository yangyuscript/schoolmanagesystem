.navbtns{
    display: flex;
    height: 80rpx;
    flex-wrap: nowrap;
    flex-direction: row;
    align-items: center;
    background-color: #ffffff;
}

.navbtns .navitem{
    flex: 1;
    text-align: center;
    color: #777777;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
}
.navbtns .navitem image{
    display: inline-block;
    width: 26rpx;
    height: 26rpx;
    margin-left: 6rpx;
    vertical-align: middle;
}

.navbtns .line{
width: 3rpx;
background-color: #aaaaaa;
height: 45rpx;
flex-shrink: 0;
}

.wrap{
    position: relative;
}

.wrap .spinner{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .6);
    z-index: 1;
    top: 0;
    left: 0;
}

.wrap .spinner .items{
    background-color: #fff;
    padding-left: 20rpx;
}

.wrap .spinner .items .item{
   padding-left: 25rpx;
border-bottom: 1rpx solid #777777;
height: 90rpx;
line-height: 90rpx;
color: #333;
font-size: 30rpx;

}


.class-links {
  background-color: #00FF33;
  line-height: 1.41176471;
  font-size: 28rpx;
  overflow: hidden;
  position: relative;
  border-top: 1px solid #d9d9d9;
}

.class-link {
  padding: 0 15px;
  padding-left: 0px;
  margin-left: 10px;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d9d9d9;
}

.class-navigator {
  padding: 10px 0;
  width: 99%;
}

.class_description{
  padding-left: 3rpx;
  padding-top: 3rpx;
}


.class_description_press {
  font-style: italic;
  font-size: 22rpx;
  color: #b2b2b2;
  padding-left: 10rpx;
}

.class_description_author {
  font-style: italic;
  font-size: 22rpx;
  color: #b2b2b2;
}

.link-icon {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  position: relative;
  top: -2px;
  top: -1px;
  margin-left: 0.3em;
  text-align: right;
  color: #888;
}


