page {
  background: #ffffff; }

.title {
  color: #1b65ce;
  text-align: center;
  padding: 45rpx;
  font-size: 50rpx; }

.item {
  text-align: center;
  margin-bottom: 35rpx; }
  .item label {
    display: inline-block;
    text-align: right;
    font-size: 36rpx;
    line-height: 1.4rem;
    vertical-align: top;
    padding: 5rpx 0;
    color: #333; }
  .item input {
    border: 4rpx solid #dddddd;
    display: inline-block;
    width: 400rpx;
    font-size: 30rpx;
    text-align: left;
    padding: 5rpx 10rpx;
    border-radius: 4rpx; }
  .item checkbox {
    width: 60rpx;
    height: 40rpx;
    position: relative;
    top: -6rpx; }
  .item.item:nth-child(2) label, .item.item:nth-child(4) label {
    letter-spacing: 3rpx; }
  .item.item:nth-child(4) input, .item.item:nth-child(5) input {
    width: 200rpx; }
  .item.item:nth-child(4) .verify, .item.item:nth-child(5) .verify {
    display: inline-block;
    width: 180rpx;
    background: #ddd;
    color: #666;
    vertical-align: top;
    padding: 18rpx 0;
    font-size: 26rpx;
    margin-left: 20rpx; }
  .item.item:nth-child(4) .img-verify, .item.item:nth-child(5) .img-verify {
    display: inline-block;
    width: 180rpx;
    height: 72rpx;
    background: #ddd;
    color: #666;
    vertical-align: top;
    font-size: 26rpx;
    margin-left: 20rpx; }
    .item.item:nth-child(4) .img-verify image, .item.item:nth-child(5) .img-verify image {
      width: 100%;
      height: 100%; }
  .item.item:nth-child(6) {
    margin-bottom: 0; }
  .item.item:nth-child(7) label {
    opacity: 0; }
  .item.item:nth-child(7) .intension-wrap {
    width: 420rpx;
    border: 2rpx solid #ddd;
    display: inline-block;
    position: relative; }
    .item.item:nth-child(7) .intension-wrap .intension {
      display: flex;
      justify-content: space-between; }
      .item.item:nth-child(7) .intension-wrap .intension view {
        background: #ddd;
        width: 33%;
        font-size: 26rpx;
        color: #666;
        padding: 10rpx 0; }
      .item.item:nth-child(7) .intension-wrap .intension .active {
        background: #1b65ce;
        color: #fff; }
  .item.item:last-child label {
    width: auto;
    font-size: 34rpx;
    vertical-align: bottom; }
  .item.item:last-child navigator {
    display: inline-block;
    font-size: 34rpx;
    line-height: 1.4rem;
    color: #1b65ce; }

.btn {
  margin-top: 80rpx; }
  .btn button {
    width: 600rpx;
    height: 80rpx;
    color: #1b65ce;
    font-size: 30rpx;
    border: 4rpx solid #1b65ce;
    border-radius: 35rpx;
    background-color: transparent; }
